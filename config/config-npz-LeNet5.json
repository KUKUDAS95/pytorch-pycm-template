{
    "name": "NPZ_LeNet5",
    "n_gpu": 2,

    "arch": {
        "type": "LeNet5",
        "args": {
        },
        "visualization": true
    },
    "data_loader": {
        "type": "NPZDataLoader",
        "args":{
            "dataset_path": "data/1-fold-test0.2.npz",
            "mode":["train", "valid"],
            "batch_size": 32,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "bce_loss",
    "metrics": [
        "ACC", "ACC_class", "TPR", "TPR_class", "TNR", "TNR_class"
    ],
    "curve_metrics":[
        "ROC"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 5,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true,
        "tensorboard_projector": {
            "train":false,
            "valid":true
        },
        "tensorboard_pred_plot": true,
        "save_performance_plot": true
    },
    "tester": {
        "tensorboard_projector":true        
    }
}
