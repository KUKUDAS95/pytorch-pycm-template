{
    "name": "Mnist_TestNet",
    "n_gpu": 2,

    "arch": {
        "type": "TestNet",
        "args": {
            "num_classes":10,
            "H":28,
            "W":28,
            "in_channels":1
        },
        "visualization": true
    },
    "data_loader": {
        "type": "MnistDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 1024,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "ce_loss",
    "metrics": [
        "ACC", "ACC_class", "TPR", "TPR_class", "TNR", "TNR_class"
    ],
    "curve_metrics":[
        "ROC"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 2,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 5,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true,
        "tensorboard_projector": {
            "train":false,
            "valid":true
        },
        "tensorboard_pred_plot": true,
        "save_performance_plot": true
    },
    "tester": {
        "tensorboard_projector":true        
    }
}
