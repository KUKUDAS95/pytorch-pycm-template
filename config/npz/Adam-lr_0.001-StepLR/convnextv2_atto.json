{
    "name": "NPZ",
    "n_gpu": 1,
    "arch": {
        "type": "convnextv2_atto",
        "args": {
            "num_classes": 2,
            "in_chans": 3
        },
        "visualization": true
    },
    "data_loader": {
        "type": "NPZDataLoader",
        "args": {
            "dataset_path": "/mnt/test/1.npz",
            "mode": [
                "train",
                "valid"
            ],
            "num_workers": 2,
            "batch_size": 64
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "loss": "bce_loss",
    "metrics": [
        "ACC",
        "ACC_class",
        "TPR",
        "TPR_class",
        "TNR",
        "TNR_class"
    ],
    "curve_metrics": [
        "ROC"
    ],
    "trainer": {
        "epochs": 10,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true,
        "tensorboard_projector": {
            "train": false,
            "valid": true
        },
        "tensorboard_pred_plot": true,
        "save_performance_plot": true
    },
    "tester": {
        "tensorboard_projector": true
    }
}